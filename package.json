{
  "name": "@bebaps/fresh-start",
  "version": "3.0.0",
  "description": "A fresh start for developing custom WordPress themes.",
  "main": "gulpfile.js",
  "scripts": {
    "clean": "rm -rf dist node_modules vendor",
    "lint:css": "stylelint --fix src/scss/**/*.scss",
    "lint:js": "eslint src/js/**/*.js"
  },
  "repository": "git+https://github.com/bebaps/fresh-start.git",
  "keywords": [
    "WordPress",
    "Theme",
    "Blank",
    "Starter",
    "Custom"
  ],
  "author": "Alexander Persky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bebaps/fresh-start/issues"
  },
  "homepage": "https://github.com/bebaps/fresh-start#readme",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.3",
    "browser-sync": "^2.26.7",
    "critical": "^1.3.9",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.7.2",
    "fg-loadcss": "^2.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^6.2.0",
    "gulp-load-plugins": "^2.0.1",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-print": "^5.0.2",
    "gulp-purgecss": "^2.0.5",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^5.0.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "purgecss-with-wordpress": "^1.1.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": "defaults",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true
    },
    "extends": "eslint:recommended",
    "rules": {},
    "ignorePatterns": [
      "gulpfile.js"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "screen",
            "apply"
          ]
        }
      ],
      "string-quotes": "single",
      "no-duplicate-selectors": true,
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "color-named": "never",
      "selector-no-qualifying-type": true,
      "selector-combinator-space-after": "always",
      "selector-attribute-quotes": "always",
      "selector-attribute-operator-space-before": "never",
      "selector-attribute-operator-space-after": "never",
      "selector-attribute-brackets-space-inside": "never",
      "declaration-block-trailing-semicolon": "always",
      "declaration-colon-space-before": "never",
      "declaration-colon-space-after": "always",
      "number-leading-zero": "always",
      "function-url-quotes": "always",
      "font-weight-notation": "numeric",
      "font-family-name-quotes": "always-where-recommended",
      "comment-whitespace-inside": "always",
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "stylelint-commands"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "first-nested",
            "inside-block"
          ]
        }
      ],
      "selector-pseudo-element-colon-notation": "double",
      "selector-pseudo-class-parentheses-space-inside": "never",
      "media-feature-range-operator-space-before": "always",
      "media-feature-range-operator-space-after": "always",
      "media-feature-parentheses-space-inside": "never",
      "media-feature-colon-space-before": "never",
      "media-feature-colon-space-after": "always"
    },
    "ignoreFiles": []
  }
}
