<div class="{{ comment.comment_type }}" id="blog-comment-{{ comment.ID }}">
  <h5>{{ comment.author.name }} says</h5>
  <div>{{ comment.comment_content|wpautop }}</div>

  {% if post.comments %}
    <section>
      <h4>Replies</h4>
      <div>
        {% for cmt in comment.children %}
          {% include "comment.twig" with {comment:cmt} %}
        {% endfor %}
      </div>
    </section>
  {% endif %}
</div>
